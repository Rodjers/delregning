<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#fff">

    <include layout="@layout/header" android:id="@+id/linearLayout1_ref"  android:layout_width="match_parent" android:layout_height="wrap_content"/>
    
    <TextView 	android:layout_height="wrap_content" 
    			android:id="@+id/text_username" 
    			android:text="@string/username" 
    			android:layout_width="match_parent"/>
    
    <EditText 	android:layout_height="wrap_content" 
    			android:singleLine="true" 
    			android:id="@+id/username" 
    			android:layout_width="match_parent" 
    			android:text="@string/edit_username" 
    			android:nextFocusDown="@+id/password" 
    			android:nextFocusRight="@+id/password"/>
    			
    <TextView 	android:text="@string/password" 
    			android:layout_width="wrap_content" 
    			android:id="@+id/text_username" 
    			android:layout_height="wrap_content"/>
    
    <EditText 	android:id="@+id/password" 
    			android:singleLine="true" 
    			android:layout_height="wrap_content" 
    			android:layout_width="match_parent" 
    			android:password="true" 
    			android:text="@string/edit_password"/>
    			
    <Button 	android:layout_height="wrap_content" 
    			android:text="@string/button_login" 
    			android:layout_width="wrap_content" 
    			android:id="@+id/login_button"/>
</LinearLayout>
